{
  "version": 2,
  "builds": [
    {
      "src": "frontend/portfolio-advisor/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "src/api/portfolio_api.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.11" 
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/src/api/portfolio_api.py"
    }
  ]
}
